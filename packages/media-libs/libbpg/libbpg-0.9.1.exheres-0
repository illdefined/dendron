require purify

SUMMARY="Better Portable Graphics library"
HOMEPAGE="http://bellard.org/bpg/"
DOWNLOADS="${HOMEPAGE}${PNV}.tar.gz"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"

DEPENDENCIES="
    build+run:
        media-libs/jpeg
        media-libs/libpng"

src_prepare() {
    default

    purify Makefile CC CXX CFLAGS
}

src_install() {
    dobin bpg{enc,dec}
}
