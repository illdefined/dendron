SUMMARY="Simple LALR parser generator"
HOMEPAGE="http://www.hwaci.com/sw/lemon/"
DOWNLOADS="http://www.sqlite.org/src/raw/tool/lemon.c?name=680980c7935bfa1edec20c804c9e5ba4b1dd96f5 -> lemon.c"

LICENCES="public-domain"
SLOT="0"
PLATFORMS="~amd64 ~x86"

WORK="${WORKBASE}"

src_unpack() {
	edo cp "${FETCHEDDIR}/lemon.c" "${WORK}"
}

src_compile() {
	edo ${CC} ${CPPFLAGS} ${CFLAGS} -o lemon{,.c} ${LDFLAGS}
}

src_install() {
	dobin lemon
}
