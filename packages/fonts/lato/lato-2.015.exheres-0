FONT="${PN}"

require xfont

SUMMARY="Lato sans-serif typeface"
HOMEPAGE="http://www.latofonts.com/"
DOWNLOADS="${HOMEPAGE}download/Lato2OFL.zip"

LICENCES="OFL"
SLOT="0"
PLATFORMS="~amd64 ~x86"

DEPENDENCIES="
	build:
		virtual/unzip"

WORK="${WORKBASE}"

src_install() {
	insinto "/usr/share/fonts/X11/${FONT}"
	doins TTF/*.ttf
	default
}
